{
    "name": "classsend",
    "version": "8.2.5",
    "description": "ClassSend - Local Network File Sharing for Education",
    "productName": "ClassSend",
    "author": "ClassSend Team",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "make:appimage": "electron-forge make --platform=linux",
        "make:win32-zip": "electron-forge make --arch=ia32 --platform=win32",
        "make:win64-zip": "electron-forge make --arch=x64 --platform=win32",
        "generate-icon": "node convert-icon.js",
        "server": "node index.js",
        "dev": "node --watch index.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "ClassSend",
                "executableName": "ClassSend",
                "icon": "./assets/icon",
                "out": "dist_build",
                "ignore": [
                    "^/[.]git",
                    "^/out",
                    "^/dist_build",
                    "^/uploads",
                    "^/node_modules/[.]cache"
                ],
                "asar": {
                    "unpack": "**/*.{node,dll}"
                },
                "extraResource": [
                    "./models"
                ],
                "arch": [
                    "x64",
                    "ia32"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin",
                        "linux",
                        "win32"
                    ]
                },
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "ClassSend",
                        "setupIcon": "./assets/icon.ico",
                        "setupExe": "ClassSend-8.2.5 Setup.exe",
                        "loadingGif": "./assets/loadingGif.gif"
                    }
                },
                {
                    "name": "@forkprince/electron-forge-maker-appimage",
                    "config": {
                        "name": "ClassSend",
                        "productName": "ClassSend",
                        "genericName": "File Sharing",
                        "description": "Local Network File Sharing for Education",
                        "categories": [
                            "Network",
                            "Education"
                        ],
                        "icon": "./public/icon.ico"
                    }
                }
            ]
        }
    },
    "keywords": [
        "education",
        "file-sharing",
        "local-network",
        "classroom"
    ],
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/kalotrapezis/ClassSend.git"
    },
    "type": "commonjs",
    "pkg": {
        "assets": [
            "public/**/*"
        ],
        "targets": [
            "node18-win-x64",
            "node18-win-x86"
        ]
    },
    "dependencies": {
        "@xenova/transformers": "^2.17.2",
        "bad-words": "^3.0.4",
        "bayes": "^1.0.0",
        "bonjour-service": "^1.3.0",
        "cors": "^2.8.5",
        "electron-squirrel-startup": "^1.0.1",
        "express": "^5.1.0",
        "internal-ip": "^8.0.1",
        "multer": "^2.0.2",
        "node-forge": "^1.3.1",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.10.2",
        "@electron-forge/maker-squirrel": "^7.10.2",
        "@electron-forge/maker-zip": "^7.10.2",
        "@forkprince/electron-forge-maker-appimage": "^1.0.11",
        "electron": "^28.0.0",
        "electron-forge-maker-nsis": "^26.7.0",
        "png-to-ico": "^3.0.1",
        "sharp": "^0.34.5"
    }
}